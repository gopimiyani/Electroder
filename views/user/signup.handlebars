<!--SignUp Start-->
<div id="heading-breadcrumbs">
    <div class="container">
        <div class="row d-flex align-items-center flex-wrap">
            <div class="col-md-7">
                <h1 class="h2">New Account </h1>
            </div>

        </div>
    </div>
</div>
<div id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="box">
                    <h2 class="text-uppercase">New account</h2>
                    <p class="lead">Not our registered customer yet?</p>
                    <p>With registration with us new world of fashion, fantastic discounts and much more opens to you!
                        The whole process will not take you more than a minute!</p>
                    <p class="text-muted">If you have any questions, please feel free to
                        <a href='#' class='' onclick="window.location.href = '../user/contact'">
                            contact
                            us</a>, our customer service center is working for you 24/7.</p>
                    <hr>
                    <form method="POST" action="/user/adduser">
                        <div class="form-group">
                            <label for="fullname">Name</label>
                            <input id="fullname" name="fullname"  class="form-control" autofocus required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" name="email" type="email" id="email" required>
                        </div>
                        <div class="form-group">
                            <label for="username">User Name</label>
                            <input class="form-control" id="username" name="username" type="text" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input class="form-control" id="password" name="password" type="password" minlength="8" required>
                        </div>
                        <div class="form-group">
                            <label for="contact_number">Contact Number</label>
                            <input class="form-control" name="contact_number" type="tel" id="contact_number" pattern="[0-9]{3}[0-9]{3}[0-9]{4}"
                                placeholder="format: 2014567890" required>

                        </div>
                        <div class="form-group">
                            <label for="address">Address</label>

                            <textarea class="form-control" name="address" type="text" id="address" required></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-template-outlined" id="btnRegister" ><i class="fa fa-user-md"></i>
                                Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--SignUp End-->
